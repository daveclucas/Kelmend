encoding  utf-8
source epc507.th
input /Users/daveclucas/Documents/caving/surveys/common_layout.th
layout layout
	copy common
	scale 1 2000
	scale-bar 200 m
	rotate 60
endlayout
layout images
	map-image 0 100 sw output/epc507_ext.pdf
endlayout
layout xvi_scale
	scale 1 1000
endlayout

export model -o ../output/epc507.3d
export model -o ../output/epc507.lox
export model -o ../output/epc507.kml
export map -o ../output/epc507_map.kml
export map -o ../resources/epc507.xvi -layout xvi_scale
export map -o ../resources/epc507_ext.xvi -proj extended -layout xvi_scale
